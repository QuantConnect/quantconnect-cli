{
  "name": "quantconnect-cli",
  "version": "1.4.5",
  "description": "CLI aimed at making local development of QuantConnect algorithms easier",
  "repository": "QuantConnect/quantconnect-cli",
  "homepage": "https://github.com/QuantConnect/quantconnect-cli",
  "bugs": "https://github.com/QuantConnect/quantconnect-cli/issues",
  "author": "Jasper van Merle",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "qcli": "./bin/run"
  },
  "keywords": [
    "oclif",
    "quantconnect"
  ],
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc -b",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --format codeframe 'src/**'",
    "lint:prettier": "prettier --check --ignore-path .gitignore '**/*.{yml,json}'",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write --ignore-path .gitignore '**/*.{yml,json}'",
    "release": "np",
    "readme": "oclif-dev readme && git add README.md",
    "version": "yarn readme",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "yarn build && oclif-dev manifest && yarn readme"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.2",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "axios": "^0.21.0",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.1",
    "cli-highlight": "^2.1.11",
    "date-fns": "^2.21.1",
    "fs-extra": "^9.1.0",
    "inquirer": "^8.0.0",
    "inquirer-autocomplete-prompt": "^1.3.0",
    "klaw-sync": "^6.0.0",
    "open": "^8.0.7",
    "progress": "^2.0.3",
    "promise-queue": "^2.2.5",
    "table": "^6.6.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.26.0",
    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.1",
    "@types/klaw-sync": "^6.0.0",
    "@types/node": "^15.0.1",
    "@types/progress": "^2.0.3",
    "@types/promise-queue": "^2.2.0",
    "@types/table": "^6.3.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "globby": "^11.0.3",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.4",
    "np": "^7.5.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "qcli",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "repositoryPrefix": "<%- commandPath %>",
    "topics": {
      "api": {
        "description": "make authenticated requests to the QuantConnect API"
      },
      "backtests": {
        "description": "manage backtests"
      },
      "files": {
        "description": "manage synchronizing local files with QuantConnect"
      },
      "live": {
        "description": "manage live trading"
      },
      "nodes": {
        "description": "manage nodes"
      },
      "projects": {
        "description": "manage projects"
      }
    },
    "warn-if-update-available": {
      "timeoutInDays": 7
    }
  },
  "np": {
    "tests": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "lib/"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "@typescript-eslint/no-inferrable-types": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": [
        "error",
        {
          "allowArgumentsExplicitlyTypedAsAny": true
        }
      ],
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "default",
          "format": [
            "camelCase"
          ]
        },
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "UPPER_CASE"
          ]
        },
        {
          "selector": [
            "typeLike",
            "enumMember"
          ],
          "format": [
            "PascalCase"
          ]
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn readme && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --format codeframe --fix"
    ],
    "*.{yml,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "arrowParens": "avoid"
  }
}
